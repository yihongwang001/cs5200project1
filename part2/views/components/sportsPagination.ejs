<% if (lastPage > 2) { %>

    <nav aria-label="Sports Pagination">
      <ul class="pagination">
        <li class="page-item">
          <a class="page-link" href="<%= '/sports/?page=' + (currentPage - 1) %>">Previous</a>
        </li>
        <li class="page-item">
          <a class="page-link" href="<%= '/sports/?page=' + 1 %>"><%= 1 %></a>
        </li>
        <li>...</li>
  
        <% for(let p = Math.max(currentPage-5, 2);
          p <= (currentPage+5) && p <= lastPage;
          p+=1) { %>
          <li class="<%= 'page-item' + ( p === currentPage ? ' active' : '') %>">
            <a class="page-link" href="<%= '/sports/?page=' + p %>"><%= p %></a>
          </li>
        <% } %>
  
        <!-- <li class="page-item active" aria-current="page">
            <span class="page-link">2</span>
          </li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
       -->
        <li>...</li>
        <li class="page-item">
          <a class="page-link" href="<%= '/sports/?page=' + lastPage %>"
            ><%= lastPage %></a
          >
        </li>
        <li class="page-item">
          <a class="page-link" href="<%= '/sports/?page=' + (currentPage + 1) %>">Next</a>
        </li>
      </ul>
    </nav>
  <% } else { %>
    <div>No pagination <%= lastPage %> </div>
  <% } %>
  
  